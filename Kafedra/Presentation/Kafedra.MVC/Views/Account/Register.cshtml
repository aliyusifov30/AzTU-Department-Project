@using Kafedra.Application.ViewModel.Account
@{
    Layout = null;
}
@model RegisterVM

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon4.png">
    <title>Qeydiyyat</title>
    <!-- FONTS -->
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap"
      rel="stylesheet"
    />

    <!-- BOOTSTRAP    -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />

    <!-- CUSTOM -->

    <link rel="stylesheet" href="~/assets/css/style.css" />
    <script defer src="~/assets/js/script.js"></script>
    <style>
        input {
            color: white !important;
        }
    </style>
  </head>

  <body class="auth">
    <div class="auth--box">
      <form method="post" class="auth--form">
        <div class="d-flex justify-content-center mb-3">
          <img src="~/assets/img/aztu_s_logo.png" class="w-25" />
        </div>
        <h2 class="fs-3">Register</h2>
        <div class="row">
                <div style="padding-top: 2rem;padding-bottom: 1rem" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="auth--inputBox col-sm-6">
                    <input asp-for="Name" autocomplete="off" required="required" />
                    <p>First Name</p>
                    <span asp-validation-for="Name" class="text-danger error-span"></span>

                </div>
                <div class="auth--inputBox col-sm-6">
                    <input asp-for="Surname" autocomplete="off" required="required" />
                    <p>Last Name</p>
                    <span asp-validation-for="Surname" class="text-danger error-span"></span>

                </div>
        </div>
         <div class="row">
                <div class="auth--inputBox col-sm-6">
                    <input asp-for="UserName" autocomplete="off" required="required" />
                    <p>User Name</p>
                    <span asp-validation-for="UserName" class="text-danger error-span"></span>

                </div>
                <div class="auth--inputBox col-sm-6">
                    <input asp-for="Email" autocomplete="off" required="required" />
                    <p>Email</p>
                    <span asp-validation-for="Email" class="text-danger error-span"></span>
                </div>
         </div>
          <div class="row">
                <div class="auth--inputBox col-sm-6">
                    <input asp-for="Password" required />
                    <p>Password</p>
                    <span asp-validation-for="Password" class="text-danger error-span"></span>

                </div>

                <div class="auth--inputBox col-sm-6">
                    <input asp-for="ConfirmPasword" required />
                    <p>Confirm Password</p>
                    <span asp-validation-for="ConfirmPasword" class="text-danger error-span"></span>
                </div>
          </div>
        
       
        <div class="auth--links">
                <div class="d-flex justify-content-center align-items-center">
                    <input asp-for="FromAztu"/>
                    <label class="text-white" style="margin-left:10px"  for="cb1">AzTU telebesiyem</label>
                </div>
          <a asp-action="Login" asp-controller="Account">Sign In</a>
        </div>
                    
                   <a ><input type="submit" value="Register"></a>

      </form>
    </div>
  </body>
</html>