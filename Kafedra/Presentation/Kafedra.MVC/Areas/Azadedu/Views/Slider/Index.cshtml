@using Kafedra.Application.ViewModel.Home;
@model HomeVM
@{
    ViewData["Title"] = "Index";
}
@{
   
    int count = 1;
    
}

<div class="content-wrapper">
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12 d-flex">
                <h1 class="align-items-center" style="width:100%;">Slider</h1>

              
                      <a style="pos" asp-action=Create asp-controller=Slider asp-area=Azadedu class="btn btn-app bg-success">

                        <i class="fas fa-solid fa-plus"></i> Create
                    </a>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
    <div class="col-12">
        <div class="card">
           
              <p class=" mx-5 mt-3"><b><strong class="text-danger ">Qeyd:</strong> Diqqet!!! Statusu aktif olan 3 sekil olmalidir!!</b></p>
            <!-- ./card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Date</th>
                          
                            <th>Status</th>
                             <th>Properties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in @Model.Sliders)
                        {
                            <tr data-widget="expandable-table" aria-expanded="false">
                                <td>@count</td>
                            <td class=""  style=" width: 300px;">
                                <img src="~/assets/img/@item.Image" style=" width: 200px; height: auto; object-fit: contain;">
                            </td>  
                                <td>@item.CreatedAt</td>
                           
                                @if (item.IsDeleted==true)
                                {
                                    <td><span class="badge bg-danger">Deleted</span></td>
                                }
                                else{
                                 <td><span class="badge bg-success">Active</span></td>
                                
                                }
                                
                                <td style="width:25%">
                                   
                                <form asp-action=Delete class="d-inline" method="post" >
                                     <button type="submit" class="btn btn-app bg-danger" asp-action=Delete asp-controller=Slider asp-route-id=@item.Id>

                                        <i class="fas fa-solid fa-trash"></i>Delete
                                    </button>
                                </form>
                                 
                                    <form  asp-action=ActivOrUnactiv class="d-inline" method="post">
                                     
                                        @if (@item.IsDeleted)
                                        {
                                            <button class="btn btn-app bg-info" asp-action=ActivOrUnactiv asp-controller=Slider asp-route-id=@item.Id>
                                             <i class="fas  fa-eye" id="togglePassword" ></i> Make Active
                                              </button>
                                        }else{
                                             <button class="btn  btn-app  bg-primary" asp-action=ActivOrUnactiv asp-controller=Slider asp-route-id=@item.Id>
                                             <i class="fas  fa-eye-slash" id="togglePassword" ></i> Make UnActive
                                              </button>
                                        }
                                       
                                   
                                </form>

                                

                                </td>
                            </tr>
                            count++;
                        }
                      
                       
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>

        </div>
        </div>

    
</section>
</div>

